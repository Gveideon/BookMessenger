@model List<User>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div>
     <h2>Список пользователей</h2>
    <table class="table">
        <tr><th>Имя</th><th>Фамилия</th><th>Роль</th><th></th><th></th><th></th></tr>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Role.ToString()</td>
                    <td>
                       <a asp-action="EditUser" asp-controller="User" asp-route-id="@item.Id">Изменить</a>
                    </td>
                    <td>
                        <a asp-action="UserDetails" asp-controller="User" asp-route-id="@item.Id">Детали</a>
                    </td>
                    <td>
                        <form asp-controller="User" asp-action="DeleteUser" method="post" asp-route-id="@item.Id">
                            <input type="submit" value="Удалить" />
                        </form>
                    </td>
                </tr>

        }
    </table>
     <a asp-action="CreateUser" asp-controller="User">Добавить пользователя</a>
</div>